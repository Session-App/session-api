{% extends 'base.html.twig' %}
{% import 'emails/elements.html.twig' as elements %}

{% block body %}
    <div style="font-size:1px; color:#f0f0f0; display:none; overflow:hidden; visibility:hidden;">Récupération du mot de passe de votre compte.</div>

    <!--there's an extra wrapper table here - this allows us to set the page background in webmail clients (where the body tag is ignored) -->
    <table width="100%" bgcolor="#f0f0f0" style="background-color:#f0f0f0;" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td valign="top"><!--table containg the main email - this will resize for mobile--><table class="full-width" align="center" width="600" border="0" cellpadding="0" cellspacing="0" bgcolor="#ffffff" style="background-color:#ffffff; width:600px;">
                    {{ elements.header_table() }}
                    <tr>
                        <td valign="top"><!-- intro -->
                            <table class="full-width" align="center" width="600" border="0" cellpadding="0" cellspacing="0" bgcolor="#ffffff" style="background-color:#ffffff; width:600px;">
                                <tr>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:15px; line-height:20px; padding-top:20px;">Bonjour {{ user.username }},</td>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                </tr>
                                <tr>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:15px; line-height:20px; padding-top:20px;">{{ 'emails.password_reset.first_line'|trans(locale=locale) }}</td>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                </tr>
                                <tr>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:15px; line-height:20px; padding-top:20px;">{{ 'emails.password_reset.click_to_change_password'|trans(locale=locale) }}</td>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                </tr>
                                <tr>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:15px; line-height:20px; padding-top:20px;"><a href="https://web.app-session.com/#/reset-password?token={{user.passwordResetToken}}&userId={{user.id}}" target="_blank" >{{ 'emails.password_reset.edit_password'|trans(locale=locale) }}</a></td>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                </tr>
                                <tr>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:15px; line-height:20px; padding-top:20px; padding-bottom:30px;">{{ 'emails.password_reset.re_login'|trans(locale=locale) }}</td>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                </tr>
                                <tr>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:15px; line-height:20px; padding-top:5px; padding-bottom:30px;">{{ 'emails.general.signature'|trans(locale=locale) }}</td>
                                    <td class="mobile-spacer" width="30" style="width:30px;"> </td>
                                </tr>
                            </table>
                            <!-- END intro -->
                        </td>
                    </tr>
                    {{ elements.end_table() }}
                </table>
            </td>
        </tr>
    </table>

{% endblock %}
